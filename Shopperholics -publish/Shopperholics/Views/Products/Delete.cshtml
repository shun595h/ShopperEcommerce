@model Shopperholics.Models.Products
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>
<div class="container">
    <h3 class="into">Are you sure you want to delete this?</h3>
    <div class="photo-index-card-details">
        <h3 class="display-picture-title">
            "@Html.DisplayFor(modelItem => modelItem.id)"
        </h3>
        @if (Model.ImageName != null)
        {
<div class="photo-display">
    <img class="photo-display-img" src="@Url.Action("GetImage", "Products", new { Id = Model.id })" />
</div>            }
        <div>
            <p class="display-label">
                @Html.DisplayNameFor(model => model.Description)
            </p>
            <br />
            <p class="display-field">
                @Html.DisplayFor(model => model.Description)
            </p>
        </div>
        
        <div>
            <p class="display-label">
                @Html.DisplayNameFor(model => model.Price)
            </p>
            <p class="display-field">
                @Html.DisplayFor(model => model.Price)
            </p>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" /> |
        <a asp-action="Index">Back to list</a>
    </form>
</div>
