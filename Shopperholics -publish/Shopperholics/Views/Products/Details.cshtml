@model Shopperholics.Models.Products

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div class="contain">
    <div class="photo-index-card-details">
        <form method="post" enctype="multipart/form-data" asp-action="AddToShoppingList">
            <h3 class="display-picture-title">
                "@Html.DisplayFor(modelItem => modelItem.ProductName)"
            </h3>


            @if (Model.ImageName != null)
            {
                <div class="photo-display">
                    <img class="photo-display-img" src="@Url.Action("GetImage", "Products", new { Id = Model.id })" />
                </div>}
            <div>
                <div>
                    <input asp-for="id" type="hidden" class="form-control" value="@Model.id">
                    <input asp-for="ProductName" type="hidden" class="form-control" value="@Model.ProductName">
                    <input asp-for="Description" type="hidden" class="form-control" value="@Model.Description">
                    <input asp-for="Price" type="hidden" class="form-control" value="@Model.Price">
                </div>
                <p class="display-label">
                    @Html.DisplayNameFor(model => model.Description)
                </p>
                <br />
                <p class="display-field">
                    @Html.DisplayFor(model => model.Description)
                </p>
            </div>
            <div>
                <p class="display-label">
                    @Html.DisplayNameFor(model => model.vendor.VendorName)
                </p>
                <p class="display-field">
                    @Html.DisplayFor(model => model.vendor.VendorName)
                </p>
            </div>
            <div>
                <p class="display-label">
                    @Html.DisplayNameFor(model => model.vendor.Address)
                </p>
                <p class="display-field">
                    @Html.DisplayFor(model => model.vendor.Address)
                </p>
            </div>
            <div>
                <p class="display-label">
                    @Html.DisplayNameFor(model => model.Price)
                </p>
                <p class="display-field">
                    @Html.DisplayFor(model => model.Price)
                </p>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <button id="formButton" type="submit" class="btn btn-outline-primary">
                    Add to Shopping List
                </button>
            }
            else
            {
                <a class="nav-link" href="@Url.Action("Login", "Customer")">Login |</a>
                
               <a class="nav-link" href="@Url.Action("Register", "Customer")">Register</a>
               <p>To Purchase the Item</p>
                

            }
        </form>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
    </div>
</div>